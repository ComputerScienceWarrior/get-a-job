<div class="bg-gradient-to-b from-blue-500 to-indigo-700 min-h-screen flex flex-col justify-center items-center">
  <div class="text-white text-4xl font-bold mb-4">
    Welcome to GetAJob!
  </div>

  <%= link_to 'Explore Portfolios', portfolios_path, class: "bg-yellow-400 hover:bg-yellow-500 text-white font-bold text-3xl py-3 px-6 rounded-full border border-yellow-600 focus:outline-none focus:shadow-outline mt-6" %>

  <div class="text-center text-white text-lg mb-8 mt-8">
    Your go-to platform for portfolio showcasing, job searching and career development.
  </div>


  <% if current_user %>
    <div class="mt-4">
      <%= link_to 'Explore Jobs', root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
    </div>
  <% else %>
    <div class="flex space-x-4">
      <div>
        <%= link_to 'Login', login_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
      </div>
      <div>
        <%= link_to 'Sign Up', signup_path, class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
      </div>
    </div>
  <% end %>
</div>
