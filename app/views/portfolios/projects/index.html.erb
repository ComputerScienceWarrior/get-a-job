<div class="bg-gradient-to-b from-blue-500 to-indigo-700 min-h-screen flex flex-col justify-center items-center">
  <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-8">
    <h2 class="text-center text-3xl font-semibold text-gray-800 mb-6">Projects for <%= @portfolio.title %></h2>

    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr>
          <th class="px-6 py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Caption</th>
          <th class="px-6 py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <tr>
            <td class="px-6 py-4 whitespace-no-wrap">
              <div class="flex justify-center">
                <%= project.title %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap">
              <div class="flex justify-center">
                <%= project.caption %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap">
              <div class="flex justify-center">
                <%= link_to 'Show', portfolio_project_path(@portfolio, project), class: " text-center text-blue-500 hover:text-blue-700 font-bold mr-2" %>
                <%= link_to 'Edit', edit_portfolio_project_path(@portfolio, project), class: "text-green-500 hover:text-green-700 font-bold mr-2" %>
                <%= link_to 'Delete', portfolio_project_path(@portfolio, project), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700 font-bold" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
