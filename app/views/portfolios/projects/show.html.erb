<div class="bg-gradient-to-b from-blue-500 to-indigo-700 min-h-screen flex flex-col justify-center items-center">
  <div class="w-full max-h-screen max-w-fit bg-white shadow-md rounded-lg p-8">
    <h2 class="text-center underline text-3xl font-semibold text-gray-800 mb-4">Project Details</h2>

    <div class="flex flex-col items-center mb-6">
        <h3 class="text-2xl font-bold text-gray-800"><%= @project.title %></h3>
        <img src="<%= @project.thumbnail_url %>" alt="Project Thumbnail" class="rounded-full w-35 h-35 object-cover mx-auto mb-4">
        <p class="italic text-lg font-semibold text-gray-600"><%= @project.caption %></p>
    </div>

    <div class="mb-4">
      <p class="text-gray-700 text-sm font-bold">Project URL:</p>
      <a href="<%= @project.project_url %>" class="text-blue-500 hover:underline"><%= @project.project_url %></a>
    </div>

    <div class="mb-4">
      <p class="text-gray-700 text-sm font-bold">GitHub URL:</p>
      <a href="<%= @project.github_url %>" class="text-blue-500 hover:underline"><%= @project.github_url %></a>
    </div>

    <div class="flex items-center justify-center p-3">
      <%= link_to 'Back to Portfolio', user_portfolio_path(@project.portfolio.user, @project.portfolio), class: "text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
</div>
