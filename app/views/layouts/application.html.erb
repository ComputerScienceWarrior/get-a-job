<!DOCTYPE html>
<html>
  <head>
    <title>GetAJob</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'flash_messages' %>
  </head>

  <body class="bg-gray-700">
    <% flash.each do |key, message| %>
      <div class="text-center p-4 mb-4 bg-blue-200 text-blue-900 border-l-4 border-blue-500 rounded" id="flash-message-<%= key %>" data-dismiss="flash">
        <%= message %>
      </div>
    <% end %>

    <nav class="text-lg bg-blue-500 py-3">
      <div class="container mx-auto flex justify-evenly items-center">
        <ul class="flex space-x-4">
          <% if current_user %>
            <li><%= link_to 'Profile', user_path(current_user), class: 'text-white' %></li>
            <li><%= link_to 'About Us', about_path, class: 'text-white' %></li>
            <li><%= link_to 'Logout', logout_path, method: :delete, class: 'text-white' %></li>
            <li class='text-white'>Logged in as <span class="text-green-500"><%= current_user.username %></span></li>
          <% else %>
            <li><%= link_to 'Home', root_path, class: 'text-white' %></li>
            <li><%= link_to 'About Us', about_path, class: 'text-white' %></li>
            <li><%= link_to 'Login', login_path, class: 'text-white' %></li>
            <li><%= link_to 'Signup', signup_path, class: 'text-white' %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
