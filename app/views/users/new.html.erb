<form action="<%= signup_path %>" method="post">
    <%= csrf_meta_tags %>

    <label for="user_firstname">First Name:</label>
    <input type="text" id="user_firstname" name="user[firstname]" required>

    <label for="user_lastname">Last Name:</label>
    <input type="text" id="user_lastname" name="user[lastname]" required>

    <label for="user_email">Email:</label>
    <input type="email" id="user_email" name="user[email]" required>

    <label for="user_username">Username:</label>
    <input type="text" id="user_username" name="user[username]" required>

    <label for="user_password">Password:</label>
    <input type="password" id="user_password" name="user[password]" required>

    <label for="user_password_confirmation">Confirm Password:</label>
    <input type="password" id="user_password_confirmation" name="user[password_confirmation]" required>

    <input type="submit" value="Sign Up">
</form>
